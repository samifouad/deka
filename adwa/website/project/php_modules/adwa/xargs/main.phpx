import { cmd_args } from '../lib.phpx'
import { stdout } from 'io'

$args = cmd_args()
$n = 999999
$start = 0
if (count($args) >= 2 && ('' . $args[0]) === '-n') {
    $n = max(1, intval($args[1]))
    $start = 2
}
$chunk = []
for ($i = $start; $i < count($args); $i += 1) {
    $chunk[] = '' . $args[$i]
    if (count($chunk) >= $n) {
        stdout(implode(' ', $chunk) . "\n")
        $chunk = []
    }
}
if (count($chunk) > 0) {
    stdout(implode(' ', $chunk) . "\n")
}
