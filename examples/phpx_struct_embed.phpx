struct Cat {
  $name: string;

  function sound(): string {
    return "meow";
  }

  function describe(): string {
    return $this.name . " says " . $this->sound();
  }
}

struct Animal {
  use Cat;

  function greet(): string {
    return "hi " . $this.name;
  }
}

$pet = Animal { $Cat: Cat { $name: "Milo" } };

echo $pet.name . "\n";
echo $pet->sound() . "\n";
echo $pet->describe() . "\n";
echo $pet->greet() . "\n";
