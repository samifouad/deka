{
  "name": "@deka/wosix-js",
  "version": "0.1.0",
  "description": "JS wrapper for Wosix WebContainer bindings.",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "private": true,
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "smoke:phpx-bridge": "npm run build && node scripts/phpx_host_bridge_smoke.mjs",
    "smoke:phpx-runtime-adapter": "npm run build && node scripts/phpx_runtime_adapter_smoke.mjs",
    "smoke:phpx-runtime-capability-denied": "npm run build && node scripts/phpx_runtime_capability_denied_smoke.mjs",
    "smoke:module-graph": "npm run build && node --experimental-specifier-resolution=node scripts/module_graph_smoke.mjs",
    "smoke:deka-wasm-runtime": "npm run build && node scripts/deka_wasm_runtime_smoke.mjs"
  },
  "devDependencies": {
    "typescript": "^5.5.4"
  }
}
