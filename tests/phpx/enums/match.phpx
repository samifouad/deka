/*
TEST: Enum payloads + match expression
Covers: enum cases (payload + unit), match dispatch on enum, payload access.
*/

enum Msg {
    case Text(string $body);
    case Ping;
}

function render(Msg $msg): string {
    return match ($msg) {
        Msg::Text => $msg.body,
        Msg::Ping => 'ping',
    };
}

echo render(Msg::Text('hi')) . "\n";
echo render(Msg::Ping) . "\n";
