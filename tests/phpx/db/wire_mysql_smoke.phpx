/*
TEST: mysql wire-only smoke (fallback_native=false) supports parameterized query path
*/
import { connect, query_one, close } from 'db/mysql'
import { result_is_ok } from 'core/result'

if (getenv('PHPX_DB_SMOKE') !== '1') {
    echo "SKIP\n"
    return
}

$cfg = {
    host: getenv('MYSQL_HOST') ?: '127.0.0.1',
    port: intval(getenv('MYSQL_PORT') ?: '3306'),
    database: getenv('MYSQL_DB') ?: 'test',
    user: getenv('MYSQL_USER') ?: 'root',
    password: getenv('MYSQL_PASSWORD') ?: '',
    fallback_native: false
}

$conn = connect($cfg)
if (!result_is_ok($conn)) {
    echo "ERR connect\n"
    return
}

$res = query_one($conn->value, 'select ? + ? as s', [4, 5])
close($conn->value)
if (!result_is_ok($res)) {
    echo "ERR query\n"
    return
}

echo "OK " . $res->value['s'] . "\n"
