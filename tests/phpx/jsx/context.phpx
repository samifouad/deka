import { renderToString } from 'component/dom';
import { createContext, ContextProvider, useContext } from 'component/core';

$Ctx = createContext('default');

function Show() {
    global $Ctx;
    return <span>{useContext($Ctx)}</span>;
}

$node = <ContextProvider ctx={$Ctx} value="scoped"><Show /></ContextProvider>;

echo renderToString($node) . "\n";
