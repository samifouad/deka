{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "PHPX",
  "scopeName": "source.phpx",
  "patterns": [
    { "include": "#frontmatter" },
    { "include": "#comments" },
    { "include": "#strings" },
    { "include": "#numbers" },
    { "include": "#keywords" },
    { "include": "#types" },
    { "include": "#variables" },
    { "include": "#jsx" }
  ],
  "repository": {
    "frontmatter": {
      "patterns": [
        {
          "name": "punctuation.definition.frontmatter.phpx",
          "match": "^---$"
        }
      ]
    },
    "comments": {
      "patterns": [
        { "name": "comment.line.double-slash.phpx", "match": "//.*$" },
        { "name": "comment.block.phpx", "begin": "/\\*", "end": "\\*/" }
      ]
    },
    "strings": {
      "patterns": [
        {
          "name": "string.quoted.double.phpx",
          "begin": "\"",
          "end": "\"",
          "patterns": [{ "name": "constant.character.escape.phpx", "match": "\\\\." }]
        },
        {
          "name": "string.quoted.single.phpx",
          "begin": "'",
          "end": "'",
          "patterns": [{ "name": "constant.character.escape.phpx", "match": "\\\\." }]
        },
        {
          "name": "string.quoted.backtick.phpx",
          "begin": "`",
          "end": "`",
          "patterns": [{ "name": "constant.character.escape.phpx", "match": "\\\\." }]
        }
      ]
    },
    "numbers": {
      "patterns": [
        { "name": "constant.numeric.phpx", "match": "\\b[0-9]+(\\.[0-9]+)?\\b" }
      ]
    },
    "keywords": {
      "patterns": [
        {
          "name": "keyword.control.phpx",
          "match": "\\b(import|export|from|as|struct|type|match|enum|if|else|return|for|while|break|continue|switch|case|default|try|catch|finally|throw|panic|use)\\b"
        }
      ]
    },
    "types": {
      "patterns": [
        {
          "name": "support.type.phpx",
          "match": "\\b(int|float|string|bool|array|Object|Option|Result|None|Some|Ok|Err)\\b"
        }
      ]
    },
    "variables": {
      "patterns": [
        { "name": "variable.other.phpx", "match": "\\$[a-zA-Z_][a-zA-Z0-9_]*" }
      ]
    },
    "jsx": {
      "patterns": [
        { "name": "entity.name.tag.phpx", "match": "</?[A-Za-z][A-Za-z0-9:_-]*" },
        { "name": "entity.other.attribute-name.phpx", "match": "\\b[a-zA-Z_:][a-zA-Z0-9:._-]*\\b(?=\\s*=)" },
        { "name": "punctuation.definition.tag.phpx", "match": "/>|<|>" }
      ]
    }
  }
}
