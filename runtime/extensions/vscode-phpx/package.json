{
  "name": "vscode-phpx",
  "displayName": "PHPX",
  "description": "PHPX language support (syntax + LSP)",
  "version": "0.2.0",
  "publisher": "deka",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/samifouad/deka"
  },
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "main": "./extension.js",
  "activationEvents": [
    "onLanguage:phpx",
    "onCommand:phpx.restartLanguageServer"
  ],
  "contributes": {
    "languages": [
      {
        "id": "phpx",
        "aliases": [
          "PHPX",
          "phpx"
        ],
        "extensions": [
          ".phpx"
        ],
        "icon": {
          "light": "./icons/phpx.svg",
          "dark": "./icons/phpx.svg"
        },
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "phpx",
        "scopeName": "source.phpx",
        "path": "./syntaxes/phpx.tmLanguage.json"
      }
    ],
    "configuration": {
      "title": "PHPX",
      "properties": {
        "phpx.lsp.path": {
          "type": "string",
          "default": "",
          "description": "Absolute path to phpx_lsp binary. Leave empty to use `deka lsp`."
        },
        "phpx.lsp.args": {
          "type": "array",
          "default": [],
          "items": {
            "type": "string"
          },
          "description": "Extra CLI args passed to the configured PHPX language server binary."
        }
      }
    },
    "commands": [
      {
        "command": "phpx.restartLanguageServer",
        "title": "PHPX: Restart Language Server"
      }
    ]
  },
  "scripts": {
    "package": "vsce package"
  },
  "dependencies": {
    "vscode-languageclient": "^9.0.1"
  }
}
