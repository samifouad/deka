---
import { jsx, jsxs } from 'component/core'
import { Hydration } from 'component/dom'

function LoadCard($props: object) {
  return <div class="card">load</div>
}

function IdleCard($props: object) {
  return <div class="card">idle</div>
}

function VisibleCard($props: object) {
  return <div class="card">visible</div>
}

function MediaCard($props: object) {
  return <div class="card">media</div>
}
---
<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Islands Directive E2E</title>
    <style>
      body { margin: 0; font-family: sans-serif; }
      #top { min-height: 160px; padding: 16px; }
      #spacer { height: 2200px; }
      #bottom { min-height: 240px; padding: 16px; }
      .card { padding: 8px; border: 1px solid #ddd; margin-bottom: 8px; }
    </style>
  </head>
  <body>
    <div id="app" dataLayout="users">
      <div id="top">
        <LoadCard client:load={true} />
        <IdleCard client:idle={true} />
        <MediaCard client:media="(min-width: 1px)" />
      </div>
      <div id="spacer"></div>
      <div id="bottom">
        <VisibleCard client:visible={true} />
      </div>
    </div>
    <Hydration container="#app" layout="users" />
  </body>
</html>
