/*
TEST: JSX component props are object-shaped at runtime
Covers: component invocation receives object-like props (not array), preventing typed-props mismatch regressions.
*/

import { renderToString } from 'component/dom'

function Hello($props: mixed): string {
  echo gettype($props) . "\n"
  return is_object($props) && isset($props->name) ? ('' . $props->name) : 'missing'
}

echo renderToString(<h1>Hello <Hello name="world" /></h1>) . "\n"
