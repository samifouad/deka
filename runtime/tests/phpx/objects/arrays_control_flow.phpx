/*
TEST: Arrays + control flow
Covers: arrays, foreach, if/else, while, for, switch.
*/

$items = [1, 2, 3];
$sum = 0;
foreach ($items as $i) {
    $sum += $i;
}

echo $sum . "\n";

if ($sum > 5) {
    echo "big\n";
} else {
    echo "small\n";
}

$i = 0;
while ($i < 2) {
    echo $i . "\n";
    $i++;
}

for ($j = 0; $j < 2; $j++) {
    echo ($j + 10) . "\n";
}

$tag = 'b';
switch ($tag) {
    case 'a':
        echo "A\n";
        break;
    case 'b':
        echo "B\n";
        break;
    default:
        echo "Z\n";
}
