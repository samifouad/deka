/// docid: php/array/krsort()
/// <Function name="krsort">
///   <Description>
///     Sorts an array by key in descending order.
///   </Description>
///   <Parameter name="$array" type="array" required="true" typeLink="/docs/php/types/array">
///     Array to sort.
///   </Parameter>
///   <ReturnType type="bool" typeLink="/docs/php/types/bool" />
/// </Function>
export function krsort(&$array) {
    if (func_num_args() !== 1) {
        return null;
    }

    if (!is_array($array)) {
        return null;
    }

    $keys = [];
    foreach ($array as $key => $_) {
        $keys[] = $key;
    }

    sort($keys);
    $keys = array_reverse($keys);

    $out = [];
    foreach ($keys as $key) {
        $out[$key] = $array[$key];
    }

    $array = $out;
    return true;
}
